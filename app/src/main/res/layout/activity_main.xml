<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#67BCEB"
                android:gravity="center"
                android:text="密码锁"
                android:textSize="40dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/shape_main_border"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edit_Ip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="锁服务器IP">
                </EditText>
                <EditText
                    android:id="@+id/edit_Port"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="锁服务器端口">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_SubmitTcp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="连接">
                </Button>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_main_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入密码"
                android:textSize="18dp">

            </TextView>
            <com.example.xiaoshushuled.PwdEditText
                android:id="@+id/pwd_Input"
                android:layout_centerInParent="true"
                android:layout_width="330dp"
                android:layout_height="wrap_content">
            </com.example.xiaoshushuled.PwdEditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_ClearPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="清空"
                    android:textSize="20dp">
                </Button>
                <Button
                    android:id="@+id/btn_Input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="开锁"
                    android:textSize="20dp">
                </Button>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_main_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="30dp"
                android:text="修改密码">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入新密码"
                    android:textSize="20dp"
                    >
                </TextView>
                <com.example.xiaoshushuled.PwdEditText
                    android:id="@+id/pwd_one"
                    android:layout_centerInParent="true"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content">
                </com.example.xiaoshushuled.PwdEditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再次输入新密码"
                    android:textSize="20dp"
                    >
                </TextView>
                <com.example.xiaoshushuled.PwdEditText
                    android:id="@+id/pwd_two"
                    android:layout_centerInParent="true"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content">
                </com.example.xiaoshushuled.PwdEditText>
            </LinearLayout>
            <Button
                android:id="@+id/btn_updatePwd"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="确定修改">
            </Button>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>